{
    "compilerOptions": {
        "module": "commonjs",
        "lib": [
            "es6"
        ],
        "baseUrl": "./",
        "typeRoots": [
            "node_modules/@types"
        ],
        "declaration": true,
        "outDir": "./dist",
        "allowUnreachableCode": false,
        "exactOptionalPropertyTypes": true,
        "noImplicitOverride": true,
        "noImplicitReturns": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true
    },
    "include": [
        "lib/*",
        "examples/example.ts"
    ],
    "exclude": [
        "build/**/*",
        "node_modules",
        "dist"
    ]
}